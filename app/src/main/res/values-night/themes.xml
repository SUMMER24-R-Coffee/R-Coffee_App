<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RCoffee" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/orange_bold</item>
        <item name="colorSecondary">@color/orange_bold</item>
        <item name="android:navigationBarColor">?android:attr/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <!--button style-->
    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="secondButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--floating action button-->
    <style name="customExtendedFAB">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">7dp</item>
        <item name="cornerSizeTopLeft">7dp</item>
        <item name="cornerSizeBottomRight">7dp</item>
        <item name="cornerSizeBottomLeft">7dp</item>
        <item name="backgroundColor">@color/light_gray</item>
    </style>

    <style name="customFABRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerSizeBottomLeft">50dp</item>
        <item name="backgroundColor">@color/white</item>
    </style>
    <!--title -->
    <style name="textTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>
    <!--name -->
    <style name="textName">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter</item>
        <item name="lineHeight">24sp</item>
    </style>
    <!--content -->
    <style name="textContent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">@font/inter</item>
        <item name="lineHeight">17sp</item>
    </style>
    <!--content -->
    <style name="textHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="lineHeight">24sp</item>
    </style>
</resources>