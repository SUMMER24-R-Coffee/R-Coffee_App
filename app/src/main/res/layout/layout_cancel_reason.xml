<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:paddingLeft="22dp"
        android:text="Reason cancel?" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?actionBarDivider"/>

    <RadioGroup
        android:id="@+id/radioGroupReasons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="22dp">

        <RadioButton
            android:id="@+id/rbReason1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Change of Plans"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbReason2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Ordered by Mistake"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbReason3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Found a Better Option"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbReason4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Delay in Delivery"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbReason5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Wrong Order Details"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbReason6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Price Too High"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbReason7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="No Longer Want It"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbReason9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Order Not Needed"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbReason10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Allergy Concerns"
            android:textSize="16sp" />

    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?actionBarDivider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="Dismiss"
            android:textColor="@color/red_exp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="OK"
            android:textColor="@color/green_ext"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>
